@model Transaction
@{
    ViewData["Title"] = @ViewBag.User.fname;
}

<div class="d-flex justify-content-around">
    <h1 class="display-4">Welcome, @ViewBag.User.fname</h1>
    @{
        decimal sum=0;
        foreach (Transaction t in @ViewBag.User.Transactions)
        {
            sum+= t.Amount;
        }
        <h3 class="display-4">Current balance:@sum</h3>
    }
<div>
<div>
    @{
        if(ViewBag.LoggedIn==true)
        {
            <a asp-controller="Home" asp-action="Logout">Logout</a>
        } 
        else 
        {
            <a asp-controller="Home" asp-action="LoginForm">Login</a>
        }
    }
</div>
<div>
    <form asp-controller="Home" asp-action="Add" asp-route-id="" method="post">
        <div>
            <span asp-validation-for="Amount"></span>
        </div>
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" >
        <button type="submit">Submit</button>
    </form>
</div>
<div class="card-body">
    <a href="#Top"><h3>All Teams in the Atlantic Soccer Conference</h3></a>
    <table class="table table-striped">
        <tr>
            <th>Amount</th>
            <th>Date</th>
        </tr>
        @foreach(var l in ViewBag.User.Transactions)
        {
            <tr>
                <td>@l.Amount</td>
                <td>@l.CreatedAt</td>
            </tr>
        }
    </table>
</div>