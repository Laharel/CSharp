@model Chef

@{
    ViewData["Title"] = "A Web Page";
}

<div>
    <a asp-action="Index" asp-controller="Home">Home</a>
</div>
<div class="text-center">
    <h1 class="display-4">@Model.FirstName @Model.LastName</h1>
</div>
<div>
    <p>@Model.DoB.ToString("MMMM dd yyyy")</p>
    <p>@Model.Age</p>
</div>
<div>
    <button type="submit"><a asp-controller="Home" asp-action="DeleteChef" asp-route-id="@Model.ChefId">Delete</a></button>
    <button type="submit"><a asp-controller="Home" asp-action="EditChef" asp-route-id="@Model.ChefId">Edit</a></button>
</div>